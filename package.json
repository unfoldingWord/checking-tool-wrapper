{
  "name": "checking-tool-wrapper",
  "description": "Checking tool wrapper for translationCore App",
  "version": "6.0.1",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "eslint ./src && jest",
    "fix": "eslint ./src --fix",
    "prebuild": "rm -rf ./lib",
    "build": "NODE_ENV=production babel ./src -d ./lib",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build",
    "postpublish": "git tag v$npm_package_version && git push origin v$npm_package_version"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(tc-ui-toolkit)).*/"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  },
  "author": "@unfoldingWord",
  "license": "MIT",
  "keywords": [],

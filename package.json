    "@babel/preset-env": "7.4.1",
    "@babel/preset-react": "7.0.0",
    "@types/jest": "^25.2.1",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-jest-hoist": "24.9.0",
    "css-loader": "2.1.1",
